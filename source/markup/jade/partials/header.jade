          a(href="#").main-header-bottom-list__item.main-header-bottom-list__item--active
            .main-header-bottom-list__item-icon(style="background-image: url(img/common/header/header-bottom-list-item-4.jpg)")
            p.main-header-bottom-list__item-text Секционные<br> ворота


script.
  $(function(){
    var top;
    $(window).scroll(function () {
      top = $(document).scrollTop();
      if(top > 108) {
        $('.main-header-bottom').addClass('main-header-bottom--fixed');
        $('.main-header-top-info').addClass('main-header-top-info--fixed');
      } else {
        $('.main-header-bottom').removeClass('main-header-bottom--fixed');
        $('.main-header-top-info').removeClass('main-header-top-info--fixed');
      }
    });
  });