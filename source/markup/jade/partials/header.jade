    .main-header-bottom
      .main-wrapper
        .main-header-bottom-list
          a(href="#").main-header-bottom-list__item.main-header-bottom-list__item--active
            .main-header-bottom-list__item-icon(style="background-image: url(img/common/header/header-bottom-list-item-1.jpg)")
